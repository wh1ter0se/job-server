{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "launch debugpy server",
            "dependsOn": "Rebuild & Install Package",
            "type": "shell",
            "isBackground": true,
            "command": "${workspaceFolder}\\.venv\\Scripts\\debugpy.exe",
            "args": [
                "--listen",
                "127.0.0.1:5678",
                "--wait-for-client",
                "${file}"
            ],
            // "presentation": {
            //  "showReuseMessage": false,
            //     // "clear": true,
            //     "panel": "shared"
            // },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "Clean Environment",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "if (Test-Path .venv) { Remove-Item -Recurse -Force .venv };"
            ],
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false,
                // "clear": true,
                "panel": "shared"
            },
        },
        {
            "label": "Setup Environment",
            "dependsOn": "Clean Environment",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "python -m venv .venv; ",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip install --upgrade pip;",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip install --upgrade --force-reinstall build setuptools wheel mypy debugpy .[test];",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip install --upgrade --force-reinstall .[test];",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip --version;",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip freeze;"
            ],
            "problemMatcher": [
                "$python"
            ],
            "presentation": {
                "showReuseMessage": false,
                // "clear": true,
                "panel": "shared"
            },
        },
        {
            "label": "Clean Package",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "if (Test-Path build) { Remove-Item -Recurse -Force build };",
                "if (Test-Path .dist) { Remove-Item -Recurse -Force .dist };"
            ],
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false,
                // "clear": true,
                "panel": "shared"
            },
        },
        {
            "label": "Generate Stubs",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "if (Test-Path src/jobserver/stubs) { Remove-Item -Recurse -Force src/jobserver/stubs };",
                "${cwd}\\.venv\\Scripts\\stubgen.exe --no-import -o src/jobserver/stubs src/jobserver 2>&1;"
            ],
            "problemMatcher": [
                "$python"
            ],
            "presentation": {
                "showReuseMessage": false,
                // "clear": true,
                "panel": "shared"
            },
        },
        {
            "label": "Rebuild & Install Package",
            "dependsOn": [
                "Clean Package",
                "Generate Stubs"
            ],
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "${cwd}\\.venv\\Scripts\\python.exe -m build --sdist --wheel;",
                "$wheel = Get-ChildItem -Path 'dist\\*.whl' | Select-Object -Last 1 -ExpandProperty FullName;",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip install --force-reinstall $wheel;",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip --version;",
                "${cwd}\\.venv\\Scripts\\python.exe -m pip freeze;"
            ],
            "problemMatcher": [
                "$python"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "showReuseMessage": false,
                "clear": true,
                "panel": "shared"
            },
        },
        {
            "label": "Clean All",
            "dependsOn": [
                "Clean Package",
                "Clean Environment"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "${cwd}\\.venv\\Scripts\\python.exe -m pytest test "
            ],
            "problemMatcher": [
                "$python"
            ],
            "presentation": {
                "showReuseMessage": false,
                // "clear": true,
                "panel": "shared"
            },
        },
        {
            "label": "Rebuild All",
            "dependsOn": [
                "Setup Environment",
                "Rebuild & Install Package"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [
                "$python"
            ],
            "group": "build",
            "presentation": {
                "showReuseMessage": false,
                "clear": true,
                "panel": "shared"
            },
        }
    ]
}