        {
            "label": "setup-environment",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "if (Test-Path .venv) { Remove-Item -Recurse -Force .venv }; python -m venv .venv; ${cwd}\\.venv\\scripts\\python.exe -m pip install --upgrade pip; ${cwd}\\.venv\\scripts\\python.exe -m pip install -r requirements.txt"
            ],
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "clean-rebuild-install",
            "dependsOn": [
                "activate-venv",
                "clean",
                "build",
                "install"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "echo": true,
                "panel": "shared",
                "focus": true
            },
            "problemMatcher": [
                "$python"
            ]
        }
    ]
